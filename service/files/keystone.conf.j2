[DEFAULT]
debug = {{ keystone_debug }}
use_syslog = False
use_stderr = True

[database]
connection = mysql+pymysql://{{ keystone_db_username }}:{{ keystone_db_password }}@mariadb/{{ keystone_db_name }}
max_retries = -1
max_overflow = 60

[cache]
enabled = True
backend = oslo_cache.memcache_pool
memcache_servers = memcached:{{ memcached_port }}
memcache_dead_retry = 60
memcache_socket_timeout = 2
memcache_pool_maxsize = 30

[token]
provider = uuid
driver = memcache_pool
caching = False

[memcache]
servers = memcached:{{ memcached_port }}
dead_retry = 60
socket_timeout = 2
pool_maxsize = 30
